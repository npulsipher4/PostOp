<%- include('partials/header', {title: 'Sign Up for Post-Op Care'}); %>

<div class="page-container signup-page">
  <div class="signup-content">
    <div class="signup-form-container">
      <h1 class="page-title">Join Post-Op Care</h1>
      <p class="signup-intro">Sign up now to receive personalized post-operative care and support.</p>
      <form id="triggerForm" class="signup-form">
        <div class="form-group">
          <label for="phoneNumber" class="form-label">Phone Number</label>
          <div class="phone-input-container">
            <select id="countryCode" name="countryCode" class="country-code-select">
              <option value="+1">+1 US</option>
              <option value="+44">+44 UK</option>
              <option value="+61">+61 AU</option>
            </select>
            <input type="tel" id="phoneNumber" name="phoneNumber" class="form-input phone-input" placeholder="(123) 456-7890" required>
          </div>
        </div>

        <div class="form-group">
          <label class="form-label">Treatment Type</label>
          <div class="radio-group">
            <div class="radio-option">
              <input type="radio" id="wisdomTeeth" name="treatment" value="Wisdom Teeth Extraction" class="radio-input" required>
              <label for="wisdomTeeth" class="radio-label">Wisdom Teeth Extraction</label>
            </div>
            <div class="radio-option">
              <input type="radio" id="rootCanal" name="treatment" value="Root Canal" class="radio-input" required>
              <label for="rootCanal" class="radio-label">Root Canal</label>
            </div>
          </div>
        </div>

        <div class="form-group checkbox-group">
          <input type="checkbox" id="optIn" name="optIn" class="checkbox-input" required>
          <label for="optIn" class="checkbox-label">I agree to receive post-operative care messages</label>
        </div>

        <div class="form-group">
          <button type="submit" id="submit" class="btn btn-primary btn-block">Sign Up</button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('partials/footer'); %>
<script src="/js/sign-up.js"></script>
